extends layout

block body



  nav(class="navbar navbar-default navbar-fixed-top")
    div(class="container-fluid")
      div(class="navbar-header")
        button(type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1")
          span(class="icon-bar") asdf
          span(class="icon-bar") 546
          span(class="icon-bar")
        a(class="navbar-brand" href="#") Sendbox

  div(class="content" ng-controller='AppCtrl')

    div(class='col-md-4')
      div(class="section")
        h6(class="section-header") Your User Name
        div(class="section-content")
          form(class="input-group" ng-submit='changeName()')
            input(type="text" class="form-control input" placeholder="{{name}}" required ng-model='newName')
            span(class="input-group-btn")
              button(class='btn btn-info btn-sm' role='button' type='submit') Set

      div(class="section")
        h6(class="section-header") Online Users
        div(class="section-content")
          ul(class='list-group')
            li(ng-repeat='user in users' class='list-group-item')
              img(class="list-avatar" src="../assets/default-profile.png")
              span {{user}}

    div(class='col-md-8')
      div(class="section")
        h6(class="section-header") Messages
        div(class="section-content")
          form(class="input-group" ng-submit='sendMessage()')
            input(type="text" class="form-control input" placeholder="Write a message" required ng-model='message')
            span(class="input-group-btn")
              button(class='btn btn-info btn-sm' role='button' type='submit') Send

          div(class="message-container")
            div(ng-repeat='message in messages', ng-class='{alert: message.user == "chatroom"}')
              span(class="{{message.type}}") {{message.date | date:'HH:mm:ss'}} &nbsp
              span {{message.user}}: {{message.text}}

  script(src="//cdnjs.cloudflare.com/ajax/libs/tether/1.3.1/js/tether.min.js")
  script(src="https://ajax.googleapis.com/ajax/libs/jquery/1.12.4/jquery.min.js")
  script(src='js/lib/angular/angular.js')
  script(src='js/lib/bootstrap/bootstrap.js')
  script(src='/socket.io/socket.io.js')
  script(src='js/app.js')
  script(src='js/services.js')
  script(src='js/controllers.js')
  script(src='js/filters.js')
  script(src='js/directives.js')
